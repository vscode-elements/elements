{
  "name": "lit-element-starter-ts",
  "version": "0.0.0",
  "description": "A simple web component",
  "main": "my-element.js",
  "module": "my-element.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:bundle": "npm run build && rollup -c --file dist/bundled.js",
    "clean": "rimraf dist",
    "eleventy": "eleventy --config=.eleventy.cjs",
    "eleventy:watch": "eleventy --config=.eleventy.cjs --watch",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/* --write",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:gen",
    "docs:clean": "rimraf docs",
    "docs:gen": "npm run build:bundle && npm run eleventy",
    "docs:gen:watch": "npm run build:bundle && npm run eleventy:watch",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "es-dev-server --root-dir=docs --node-resolve --watch",
    "docs:start": "concurrently \"npm run docs:gen:watch\" \"npm run docs:serve\" --names \"11ty,server\"",
    "analyze": "wca analyze \"src/**/*.ts\" --outFiles docs-src/pages/{tagname}/api.md && node scripts/patchMdFiles.js",
    "serve": "es-dev-server --node-resolve --watch --app-index dev/index.html --open",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\" --names \"tsc,server\"",
    "test": "npm run build && karma start karma.conf.cjs --coverage",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
    "checksize": "rollup -c ; cat dist/bundled.js | gzip -9 | wc -c"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@open-wc/testing": "^2.5.10",
    "@open-wc/testing-karma": "^3.3.11",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "es-dev-server": "^1.46.1",
    "eslint": "^6.8.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "lit-analyzer": "^1.1.10",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-filesize": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^3.8.3",
    "web-component-analyzer": "^1.0.3"
  }
}
