{
  "name": "@vscode-elements/elements",
  "version": "1.0.1",
  "description": "Webcomponents for creating Visual Studio Code extensions",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "type": "module",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "custom-elements.json",
    "vscode.*-custom-data.json",
    "!dist/**/*.test.*"
  ],
  "customElements": "custom-elements.json",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "build:watch": "wireit",
    "clean": "rimraf -g .wireit coverage dist custom-elements.json stats.html vscode.*-custom-data.json",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/**/* --write",
    "analyze": "wireit",
    "serve": "wireit",
    "start": "wireit",
    "test": "wireit",
    "test:coverage": "wireit",
    "test:watch": "wtr --watch",
    "checksize": "npm run build && cat dist/bundled.js | gzip -9 | wc -c",
    "generate": "node scripts/generateComponent.js",
    "icons": "node scripts/generateIconList.js",
    "vscode-data": "wireit"
  },
  "wireit": {
    "analyze": {
      "command": "cem analyze --litelement --globs=\"src/**/*.ts\" --exclude=\"src/main.ts\" --exclude=\"src/test/**/*\" --exclude=\"src/*/index.ts\"",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "custom-elements.json"
      ]
    },
    "build": {
      "command": "rollup -c --file dist/bundled.js",
      "dependencies": [
        "analyze",
        "vscode-data",
        "build:ts"
      ],
      "files": [
        "rollup.config.json"
      ],
      "output": [
        "dist/bundled.js"
      ]
    },
    "build:ts": {
      "command": "tsc --build",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**",
        "!dist/bundled.js"
      ]
    },
    "build:watch": {
      "command": "tsc --watch",
      "service": true
    },
    "serve": {
      "command": "wds --watch",
      "service": true
    },
    "start": {
      "command": "wds --watch",
      "dependencies": [
        "build:watch"
      ],
      "service": true
    },
    "test": {
      "command": "wtr",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "wtr --coverage",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": []
    },
    "vscode-data": {
      "command": "node scripts/generate-custom-data.mjs",
      "dependencies": [
        "analyze"
      ],
      "files": [
        "custom-elements.json"
      ],
      "output": [
        "vscode.html-custom-data.json",
        "vscode.css-custom-data.json"
      ]
    }
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "bendera",
  "license": "MIT",
  "browserslist": [
    "last 1 chrome versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bendera/vscode-webview-elements.git"
  },
  "bugs": {
    "url": "https://github.com/bendera/vscode-webview-elements/issues"
  },
  "homepage": "https://bendera.github.io/vscode-webview-elements",
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/codicons": "^0.0.35",
    "@web/dev-server": "^0.4.2",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/dev-server-legacy": "^2.1.0",
    "@web/dev-server-rollup": "^0.6.1",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-mocha": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "custom-element-vs-code-integration": "^1.2.2",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.2",
    "eslint": "^8.56.0",
    "lit-analyzer": "^2.0.3",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.10.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-minify-html-literals-v3": "^1.3.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "semver": "^7.6.0",
    "sinon": "^17.0.1",
    "typescript": "^5.3.3",
    "wireit": "^0.14.4"
  }
}
