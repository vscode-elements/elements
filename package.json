{
  "name": "@bendera/vscode-webview-elements",
  "version": "0.16.1-pre.1",
  "description": "Webcomponents for creating Visual Studio Code extensions",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "type": "module",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "custom-elements.json",
    "!dist/test"
  ],
  "customElements": "custom-elements.json",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "build:watch": "wireit",
    "clean": "rimraf .wireit && rimraf coverage && rimraf dist && rimraf docs && rimraf custom-elements.json && rimraf stats.html",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/**/* --write",
    "docs": "wireit",
    "docs:dev": "wireit",
    "docs:start": "wireit",
    "analyze": "wireit",
    "serve": "wireit",
    "start": "wireit",
    "test": "wireit",
    "test:coverage": "wireit",
    "test:watch": "wtr --watch",
    "checksize": "npm run build:bundle && cat dist/bundled.js | gzip -9 | wc -c",
    "generate": "node scripts/generateComponent.js",
    "icons": "node scripts/generateIconList.js"
  },
  "wireit": {
    "analyze": {
      "command": "cem analyze --litelement --globs=\"src/**/*.ts\" --exclude=\"src/main.ts\" --exclude=\"src/test/**/*\" --exclude=\"src/*/index.ts\"",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "custom-elements.json"
      ]
    },
    "build": {
      "command": "rollup -c --file dist/bundled.js",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "rollup.config.json"
      ],
      "output": [
        "dist/bundled.js"
      ]
    },
    "build:ts": {
      "command": "tsc --build",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**",
        "!dist/bundled.js"
      ]
    },
    "build:watch": {
      "command": "tsc --watch",
      "service": true
    },
    "docs": {
      "command": "eleventy --config=.eleventy.cjs",
      "env": {
        "NODE_ENV": "production"
      },
      "dependencies": [
        "build",
        "analyze"
      ],
      "files": [
        ".env",
        "docs-src/**/*",
        ".eleventy.cjs",
        "custom-elements.json"
      ],
      "output": [
        "docs/**/*"
      ]
    },
    "docs:dev": {
      "command": "eleventy --config=.eleventy.cjs",
      "env": {
        "NODE_ENV": "development"
      },
      "dependencies": [
        "build",
        "analyze"
      ],
      "files": [
        ".env",
        "docs-src/**/*",
        ".eleventy.cjs",
        "custom-elements.json"
      ],
      "service": true
    },
    "docs:start": {
      "command": "eleventy --config=.eleventy.cjs --serve --port=8081",
      "env": {
        "NODE_ENV": "development"
      },
      "dependencies": [
        "build",
        "analyze"
      ],
      "files": [
        ".env",
        ".eleventy.cjs",
        "src/**/*.ts"
      ],
      "service": true
    },
    "serve": {
      "command": "wds --watch",
      "service": true
    },
    "start": {
      "command": "wds --watch",
      "dependencies": [
        "build:watch"
      ],
      "service": true
    },
    "test": {
      "command": "wtr",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "wtr --coverage",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": []
    }
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "bendera",
  "license": "MIT",
  "browserslist": [
    "last 1 chrome versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bendera/vscode-webview-elements.git"
  },
  "bugs": {
    "url": "https://github.com/bendera/vscode-webview-elements/issues"
  },
  "homepage": "https://bendera.github.io/vscode-webview-elements",
  "dependencies": {
    "lit": "^2.7.5"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@custom-elements-manifest/analyzer": "^0.8.3",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@faker-js/faker": "^8.0.2",
    "@gerhobbelt/markdown-it-github-headings": "^2.0.0-2",
    "@open-wc/testing": "^3.2.0",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vscode/codicons": "^0.0.33",
    "@web/dev-server": "^0.2.3",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/dev-server-legacy": "^2.0.0",
    "@web/dev-server-rollup": "^0.5.1",
    "@web/test-runner": "^0.16.1",
    "@web/test-runner-mocha": "^0.8.1",
    "@web/test-runner-playwright": "^0.10.1",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "api-viewer-element": "^1.0.0-pre.7",
    "color": "^4.2.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "lit-analyzer": "^1.2.1",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "randomcolor": "^0.6.2",
    "recursive-readdir": "^2.2.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-minify-html-literals-v3": "^1.3.3",
    "rollup-plugin-visualizer": "^5.9.2",
    "semver": "^7.5.2",
    "sinon": "^15.1.2",
    "typescript": "^5.1.3",
    "wireit": "^0.9.5"
  }
}
