{
  "name": "@vscode-elements/elements",
  "version": "1.11.0",
  "description": "Webcomponents for creating Visual Studio Code extensions",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "type": "module",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "custom-elements.json",
    "vscode.*-custom-data.json",
    "!dist/**/*.test.*"
  ],
  "customElements": "custom-elements.json",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "build:watch": "wireit",
    "clean": "rimraf -g .wireit coverage dist custom-elements.json stats.html vscode.*-custom-data.json tsconfig.tsbuildinfo",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint src/**/*.ts --no-warn-ignored",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/**/* --write",
    "analyze": "wireit",
    "serve": "wireit",
    "start": "wireit",
    "test": "wireit",
    "test:coverage": "wireit",
    "test:watch": "wtr --watch",
    "checksize": "npm run build && cat dist/bundled.js | gzip -9 | wc -c",
    "generate": "node scripts/generateComponent.js",
    "icons": "node scripts/generateIconList.js",
    "vscode-data": "wireit"
  },
  "wireit": {
    "analyze": {
      "command": "cem analyze --litelement --globs=\"src/**/*.ts\" --exclude=\"src/main.ts\" --exclude=\"src/test/**/*\" --exclude=\"src/*/index.ts\"",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "custom-elements.json"
      ]
    },
    "build": {
      "command": "rollup -c --file dist/bundled.js",
      "dependencies": [
        "analyze",
        "vscode-data",
        "build:ts"
      ],
      "files": [
        "rollup.config.json"
      ],
      "output": [
        "dist/bundled.js"
      ]
    },
    "build:ts": {
      "command": "tsc --build",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**",
        "!dist/bundled.js"
      ]
    },
    "build:watch": {
      "command": "tsc --watch",
      "service": true
    },
    "serve": {
      "command": "wds --watch",
      "service": true
    },
    "start": {
      "command": "wds --watch",
      "dependencies": [
        "build:watch"
      ],
      "service": true
    },
    "test": {
      "command": "wtr",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": []
    },
    "test:coverage": {
      "command": "wtr --coverage",
      "dependencies": [
        "build:ts"
      ],
      "files": [
        "src/**/*.ts"
      ],
      "output": []
    },
    "vscode-data": {
      "command": "node scripts/generate-custom-data.mjs",
      "dependencies": [
        "analyze"
      ],
      "files": [
        "custom-elements.json"
      ],
      "output": [
        "vscode.html-custom-data.json",
        "vscode.css-custom-data.json"
      ]
    }
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "bendera",
  "license": "MIT",
  "browserslist": [
    "last 1 chrome versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bendera/vscode-webview-elements.git"
  },
  "bugs": {
    "url": "https://github.com/bendera/vscode-webview-elements/issues"
  },
  "homepage": "https://bendera.github.io/vscode-webview-elements",
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@bendera/wds-plugin-directory-index": "^0.4.0",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode-elements/webview-playground": "^1.4.0",
    "@vscode/codicons": "^0.0.36",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.3",
    "@web/dev-server-legacy": "^2.1.1",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-mocha": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "chokidar": "^4.0.3",
    "custom-element-vs-code-integration": "^1.4.1",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.7",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-wc": "^2.2.0",
    "lit-analyzer": "^2.0.3",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "semver": "^7.6.3",
    "sinon": "^19.0.2",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "^5.7.3",
    "wireit": "^0.14.9"
  }
}
